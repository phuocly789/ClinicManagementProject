@page "/login"
@layout EmptyLayout

@inject AuthenticationStateProvider _authenticationStateProvider
@inject NavigationManager _navigation
@inject IHttpClientFactory HttpClientFactory
@inject IJSRuntime JSRuntime

@namespace ClinicManagement_WebApp.Pages
@using System.ComponentModel.DataAnnotations

@* Chúng ta không cần CSS tùy chỉnh nữa, Bootstrap 5 đã hỗ trợ tất cả *@
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    /* Button hover animation */
    .btn-primary {
        transition: transform 0.2s ease-in-out;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
    }

    /* Card shadow animation */
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15) !important;
    }

    /* Demo buttons */
    .btn-outline-primary {
        transition: all 0.2s ease;
    }

    .btn-outline-primary:hover {
        background-color: #0d6efd;
        color: #fff;
    }
</style>
@* <ToastNotification IsVisible="@showToast" Message="@toastMessage" ToastType="@toastType" OnClose="@HideToast" /> *@
<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg p-4 rounded-3" style="max-width: 450px; width: 100%;">
        <div class="text-center mb-4">
            <h1 class="text-primary h3 fw-bold">Hệ Thống Quản Lý Phòng Khám</h1>
            <p class="text-muted">Vui lòng đăng nhập để tiếp tục</p>
        </div>

        <EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger mb-3" />
            @if (showLoginMessage)
            {
                <div class="alert alert-danger" role="alert">
                    @loginMessage
                </div>
            }
            <div class="mb-4">
                <label class="form-label fw-semibold">Chọn vai trò:</label>
                <InputRadioGroup @bind-Value="loginModel.Role">
                    <div class="d-flex justify-content-start flex-wrap gap-2">
                        @foreach (var role in Roles)
                        {
                            <div class="form-check form-check-inline">
                                <InputRadio class="form-check-input" Value="@role.Description" id="@role.Name" />
                                <label class="form-check-label" for="@role.Name">
                                    @role.Name
                                </label>
                            </div>
                        }
                    </div>
                </InputRadioGroup>
            </div>
            @* <div class="text-center">
                <p class="text-secondary fw-semibold mb-2">Truy cập nhanh (Demo):</p>
                <div class="d-flex justify-content-center flex-wrap gap-2">
                    <a class="btn btn-sm btn-outline-primary" href="/patient_dashboard">
                        Bệnh nhân
                    </a>
                    <a class="btn btn-sm btn-outline-primary" href="/receptionist_dashboard">
                        Lễ tân
                    </a>
                    <a class="btn btn-sm btn-outline-primary" href="/doctor_dashboard">
                        Bác sĩ
                    </a>
                    <a class="btn btn-sm btn-outline-primary" href="/admin/dashboard">
                        Admin
                    </a>
                </div>
            </div> *@
            <div class="input-group mb-3">
                <span class="input-group-text bg-light">
                    <i class="fas fa-user"></i>
                </span>
                <div class="form-floating">
                    <InputText class="form-control" placeholder="Tên đăng nhập" id="EmailOrPhone" name="EmailOrPhone"
                        @bind-Value="loginModel.EmailOrPhone" />
                    <label for="EmailOrPhone">Tên đăng nhập (email hoặc SĐT)</label>
                </div>
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text bg-light">
                    <i class="fas fa-lock"></i>
                </span>
                <div class="form-floating">
                    <InputText type="@passwordInputType" class="form-control" placeholder="Mật khẩu" id="password"
                        name="password" @bind-Value="loginModel.Password" />
                    <label for="password">Mật khẩu</label>
                </div>
                <span class="input-group-text toggle-password" @onclick="TogglePasswordVisibility">
                    <i class="@passwordIconClass"></i>
                </span>
            </div>




            <button type="submit" class="btn btn-primary w-100 py-2 mb-3" disabled="@isPrerendering">
                @if (isPrerendering)
                {
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    <span> Đang tải...</span>
                }
                else
                {
                    <span>Đăng Nhập</span>
                }
            </button>
        </EditForm>

        <div class="text-center mb-3">
            <a href="#" class="text-primary text-decoration-none me-2">
                Quên mật khẩu?
            </a>
            |
            <a href="#" class="text-primary text-decoration-none ms-2">
                Đăng ký tài khoản mới (Bệnh nhân)
            </a>
        </div>


    </div>
</div>


@code {
    private HttpClient _httpClient;

    private UserLoginDTO loginModel = new();
    private RoleOption[] Roles = new RoleOption[]
    {
new RoleOption { Name = "Bệnh nhân", Description = "Patient" },
new RoleOption { Name = "Lễ tân", Description = "Receptionist" },
new RoleOption { Name = "Bác sĩ", Description = "Doctor" },
new RoleOption { Name = "Admin", Description = "Admin" }
    };
    private string passwordInputType = "password";
    private string passwordIconClass = "fas fa-eye";
    private string loginMessage = "";
    private bool isPrerendering = true;
    private bool showLoginMessage = false;

    // Lớp để hiển thị vai trò được chọn trên giao diện
    public class RoleOption
    {
        public string Name { get; set; }
        public string Description { get; set; }
    }

    // DTO cho model login
    public class UserLoginDTO
    {
        [Required(ErrorMessage = "Vui lòng nhập tên đăng nhập.")]
        public string EmailOrPhone { get; set; }

        [Required(ErrorMessage = "Vui lòng nhập mật khẩu.")]
        public string Password { get; set; }

        [Required(ErrorMessage = "Vui lòng chọn vai trò.")]
        public string Role { get; set; }
    }

    // Lớp khớp với phản hồi API khi thành công
    public class LoginResponseDTO
    {
        public string Token { get; set; }
        public List<string> Roles { get; set; }
    }

    // Lớp mới khớp với phản hồi lỗi từ API (như bạn đã ghi chú)
    public class ErrorResponseDTO
    {
        public string Message { get; set; }
        // Bạn có thể thêm các thuộc tính khác nếu API trả về lỗi chi tiết hơn
        // public Dictionary<string, string[]> Errors { get; set; }
    }
    protected override async Task OnInitializedAsync()
    {
        _httpClient = HttpClientFactory.CreateClient("ClinicManagement_API_NoAuth");
    }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            isPrerendering = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task HandleLogin()
    {
        loginMessage = "";
        showLoginMessage = false;

        var response = await _httpClient.PostAsJsonAsync("Auth/UserLogin", loginModel);

        if (response.IsSuccessStatusCode)
        {
            var payload = await response.Content.ReadFromJsonAsync<LoginResponseDTO>();
            var token = payload?.Token;

            if (string.IsNullOrWhiteSpace(token))
            {
                showLoginMessage = true;
                loginMessage = "Đăng nhập thất bại. Vui lòng thử lại.";
                return;
            }

            var jwtProvider = (JwtAuthStateProvider)_authenticationStateProvider;
            await jwtProvider.SetTokenAsync(token);
            Console.WriteLine("-------------------------------------------");
            Console.WriteLine(loginModel.Role);
            Console.WriteLine("-------------------------------------------");
            string targetUrl = loginModel.Role switch
            {
                "Admin" => "/admin/dashboard",
                "Patient" => "/patient/dashboard",
                "Receptionist" => "/receptionist/dashboard",
                "Doctor" => "/doctor/dashboard",
                _ => "/"
            };

            _navigation.NavigateTo(targetUrl);
            return;
        }
        else
        {
            showLoginMessage = true;
            loginMessage = "Tên đăng nhập hoặc mật khẩu không đúng.";
        }
    }

    private Task TogglePasswordVisibility()
    {
        passwordInputType = passwordInputType == "password" ? "text" : "password";
        passwordIconClass = passwordInputType == "password" ? "fas fa-eye" : "fas fa-eye-slash";

        // Không cần gọi JSRuntime. Chỉ cần return Task.CompletedTask
        return Task.CompletedTask;
    }

}