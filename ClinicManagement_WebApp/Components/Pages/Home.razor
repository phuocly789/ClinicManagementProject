@page "/"
@layout EmptyLayout

<!-- Thêm Bootstrap 5 và Font Awesome -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous">

<!-- Header -->
<header class="bg-white shadow-sm sticky-top">
    <div class="container d-flex justify-content-between align-items-center py-3">
        <a href="/" class="fs-4 fw-bold text-primary text-decoration-none">Phòng Khám Phước Tâm</a>
        <div>
            <a href="/booking" class="btn btn-primary">Đặt Lịch Hẹn</a>
            <a href="/login" class="btn btn-outline-secondary ms-2">Đăng Nhập</a>
        </div>
    </div>
</header>

<!-- Hero Section -->
<section class="text-center text-white py-5" style="background: linear-gradient(rgba(0,91,179,.7), rgba(0,91,179,.7)), url('https://via.placeholder.com/1500x600.png?text=Clinic+Background') center/cover no-repeat; min-height: 60vh; display: flex; align-items: center;">
    <div class="container py-5">
        <h1 class="display-4 fw-bold animate__animated animate__fadeInDown">Chăm Sóc Sức Khỏe Tận Tâm & Chuyên Nghiệp</h1>
        <p class="lead mb-4 animate__animated animate__fadeInUp">Dịch vụ y tế chất lượng cao, đội ngũ bác sĩ giàu kinh nghiệm, trang thiết bị hiện đại.</p>
        <a href="/booking" class="btn btn-lg btn-light animate__animated animate__pulse">Đặt Lịch Khám Ngay</a>
    </div>
</section>

<!-- Services Section -->
<section id="services" class="py-5 text-center bg-light">
    <div class="container">
        <h2 class="mb-4 animate__animated animate__fadeIn">Dịch Vụ Của Chúng Tôi</h2>
        <div class="row g-4">
            @foreach (var service in Services)
            {
                <div class="col-md-4">
                    <div class="card shadow-sm h-100 p-4 border-0">
                        <i class="fas @service.Icon display-3 text-primary mb-3"></i>
                        <h3 class="mt-3">@service.Title</h3>
                        <p>@service.Description</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Doctors Section -->
<section id="doctors" class="py-5 text-center">
    <div class="container">
        <h2 class="mb-4 animate__animated animate__fadeIn">Đội Ngũ Bác Sĩ Tận Tâm</h2>
        <div class="row g-4 justify-content-center">
            @foreach (var doctor in Doctors)
            {
                <div class="col-md-3">
                    <div class="card shadow-sm p-3 border-0">
                        <img src="@doctor.Image" class="rounded-circle mx-auto d-block mb-3 border border-4 border-info-subtle" alt="@doctor.Name" style="width: 150px; height: 150px; object-fit: cover;" />
                        <h5>@doctor.Name</h5>
                        <p class="text-muted fst-italic">@doctor.Specialty</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Footer -->
<footer id="contact" class="bg-dark text-white py-5 text-center">
    <div class="container">
        <h4>Phòng Khám Đa Khoa Phước Tâm</h4>
        <p>Địa chỉ: 123 Đường Sức Khỏe, Phường An Lành, Quận Bình Yên, TP. Hồ Chí Minh</p>
        <p>Điện thoại: (028) 3812 3456</p>
        <p>Email: <a href="mailto:info@phongkhamPhuocTam.com" class="text-info text-decoration-none">info@phongkhamPhuocTam.com</a></p>
        <hr class="border-secondary my-4" />
        <p class="mb-0">&copy; 2025 Phòng khám Phước Tâm. Đã đăng ký bản quyền.</p>
    </div>
</footer>

@code {
    // Dữ liệu mẫu cho dịch vụ
    private List<Service> Services = new()
    {
        new Service { Icon = "fa-stethoscope", Title = "Khám Tổng Quát", Description = "Kiểm tra sức khỏe định kỳ, tầm soát bệnh lý để bảo vệ sức khỏe toàn diện." },
        new Service { Icon = "fa-heart", Title = "Khám Tim Mạch", Description = "Chẩn đoán và điều trị các bệnh lý về tim mạch với chuyên gia hàng đầu." },
        new Service { Icon = "fa-tooth", Title = "Răng - Hàm - Mặt", Description = "Dịch vụ nha khoa từ cơ bản đến chuyên sâu, thẩm mỹ nụ cười." }
    };

    // Dữ liệu mẫu cho bác sĩ
    private List<Doctor> Doctors = new()
    {
        new Doctor { Name = "BS. Trần Thị B", Specialty = "Chuyên khoa Nội tổng quát", Image = "https://via.placeholder.com/150" },
        new Doctor { Name = "BS. Lê Văn C", Specialty = "Chuyên khoa Răng - Hàm - Mặt", Image = "https://via.placeholder.com/150" },
        new Doctor { Name = "BS. Phạm Anh D", Specialty = "Chuyên khoa Tim Mạch", Image = "https://via.placeholder.com/150" }
    };

    // Class cho Service
    private class Service
    {
        public string Icon { get; set; }
        public string Title { get; set; }
        public string Description { get; set; }
    }

    // Class cho Doctor
    private class Doctor
    {
        public string Name { get; set; }
        public string Specialty { get; set; }
        public string Image { get; set; }
    }
}