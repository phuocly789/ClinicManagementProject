@inject IJSRuntime JSRuntime

@if (IsVisible)
{
    <div class="modal-overlay">
        <div class="modal">
            <div class="modal-header">
                <h3>@Title</h3>
            </div>
            <div class="modal-body">
                @((MarkupString)Message)
            </div>
            <div class="modal-footer">
                @if (ShowConfirmButton)
                {
                    <button class="btn-success" @onclick="OnConfirm">Xác nhận</button>
                }
                <button class="btn-danger" @onclick="OnCancel">Hủy</button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public string Title { get; set; } = "Thông báo";

    [Parameter]
    public string Message { get; set; } = "";

    [Parameter]
    public bool ShowConfirmButton { get; set; } = true;

    [Parameter]
    public EventCallback OnConfirm { get; set; }

    [Parameter]
    public EventCallback OnCancel { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (IsVisible)
        {
            await JSRuntime.InvokeVoidAsync("focusModal");
        }
    }
}