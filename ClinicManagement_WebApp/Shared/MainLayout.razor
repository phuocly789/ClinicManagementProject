@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Routing

<div class="dashboard-container">
    <aside class="sidebar">
        <h2>Phòng Khám XYZ</h2>
        <div class="user-info">
            <p>Xin chào,</p>
            <strong>Admin</strong>
        </div>
        <nav>
            <ul>
                <li>
                    <NavLink href="/admin/dashboard" Match="NavLinkMatch.Prefix" class="nav-item">Dashboard (Thống kê)</NavLink>
                </li>
                <li>
                    <NavLink href="/admin/users" Match="NavLinkMatch.Prefix" class="nav-item">Quản Lý Người Dùng</NavLink>
                </li>
                <li>
                    <NavLink href="/admin/services" Match="NavLinkMatch.Prefix" class="nav-item">Quản Lý Dịch Vụ</NavLink>
                </li>
                <li>
                    <NavLink href="/admin/medicines" Match="NavLinkMatch.Prefix" class="nav-item">Quản Lý Thuốc</NavLink>
                </li>
                <li>
                    <NavLink href="/admin/revenue" Match="NavLinkMatch.Prefix" class="nav-item">Báo Cáo Doanh Thu</NavLink>
                </li>
                <li>
                    <NavLink href="/logout" Match="NavLinkMatch.Prefix" class="nav-item">Đăng Xuất</NavLink>
                </li>
            </ul>
        </nav>
    </aside>
    <main>
        @Body
    </main>
</div>

<style>
body {
    font-family: 'Segoe UI', sans-serif;
    margin: 0;
    color: #333;
    line-height: 1.6;
    background-color: #f4f7f6;
}

.dashboard-container {
    display: flex;
    min-height: 100vh;
    width: 99vw;
    margin: 0;
}

.sidebar {
    width: 300px;
    background-color: #17a2b8;
    color: white;
    height: 100vh;
    padding-top: 20px;
}

.sidebar h2 {
    text-align: center;
}

.sidebar .user-info {
    text-align: center;
    margin-bottom: 20px;
}

.sidebar .user-info p {
    margin: 5px 0;
}

.sidebar nav ul {
    list-style: none;
    padding: 0;
}

.sidebar nav ul li a {
    display: block;
    padding: 15px 20px;
    font-size: 20px;
    color: white;
    text-decoration: none;
    transition: background-color 0.3s;
}

.sidebar nav ul li a.active,
.sidebar nav ul li a:hover {
    background-color: #138496;
}
</style>